<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurantdialogVIew"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageRating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="138dp"
                android:layout_marginTop="149dp"
                android:layout_marginEnd="138dp"
                android:layout_marginBottom="18dp"
                android:text="Your rating for:"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/nameRestaurantView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameRestaurantView"
                android:layout_width="221dp"
                android:layout_height="36dp"
                android:layout_marginStart="93dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="95dp"
                android:layout_marginBottom="25dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/showRating"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageRating1" />

            <TextView
                android:id="@+id/showRating"
                android:layout_width="159dp"
                android:layout_height="36dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="125dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/doneButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameRestaurantView" />

            <Button
                android:id="@+id/doneButton"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="145dp"
                android:layout_marginBottom="3dp"
                android:text="Done"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showRating" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>